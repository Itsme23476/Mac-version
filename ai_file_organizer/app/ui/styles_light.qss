/* Modern Sidebar UI Theme - Lumina (Light Mode) */

/* ==================== Global Colors and Settings ==================== */
* {
    background-color: #FAFBFC;
    color: #1A1A1A;
    font-family: "Segoe UI", "SF Pro Display", "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
    selection-background-color: #7C4DFF;
    selection-color: #FFFFFF;
}

/* ==================== Main Window & Pages ==================== */
QMainWindow, QDialog {
    background-color: #FAFBFC;
}

#searchPage, #indexPage, #settingsPage {
    background-color: #FAFBFC;
}

#indexScrollArea, #indexScrollContent {
    background-color: transparent;
    border: none;
}

#indexScrollArea QScrollBar:vertical {
    background-color: #E8E8E8;
    width: 8px;
    border-radius: 4px;
}

#indexScrollArea QScrollBar::handle:vertical {
    background-color: #C0C0C0;
    border-radius: 4px;
    min-height: 30px;
}

#indexScrollArea QScrollBar::handle:vertical:hover {
    background-color: #A0A0A0;
}

#indexScrollArea QScrollBar::add-line:vertical,
#indexScrollArea QScrollBar::sub-line:vertical {
    height: 0px;
}

#settingsContent {
    background-color: #FAFBFC;
}

#pageStack {
    background-color: #FAFBFC;
}

/* ==================== Sidebar ==================== */
#sidebar {
    background-color: #FFFFFF;
    border-right: 1px solid #E8E8E8;
}

#logoContainer {
    background-color: transparent;
}

#logoIcon {
    font-size: 24px;
    color: #7C4DFF;
    background: transparent;
}

#logoText {
    font-size: 20px;
    font-weight: 700;
    color: #1A1A1A;
    background: transparent;
    letter-spacing: -0.5px;
}

#navContainer {
    background-color: transparent;
}

#navButton {
    background: transparent;
    border: none;
    border-left: 3px solid transparent;
    border-radius: 0px;
    text-align: left;
    padding: 14px 16px;
    color: #666666;
    font-size: 14px;
    font-weight: 500;
}

#navButton:hover {
    background-color: rgba(124, 77, 255, 0.05);
    color: #4A4A4A;
}

#navButton:checked {
    background-color: rgba(124, 77, 255, 0.08);
    border-left: 3px solid #7C4DFF;
    color: #7C4DFF;
    font-weight: 600;
}

#accountContainer {
    background-color: rgba(124, 77, 255, 0.06);
    border-top: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 12px;
    margin: 8px;
    padding: 4px;
}

#avatarCircle {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #7C4DFF, stop:1 #9D7AFF);
    color: white;
    font-size: 14px;
    font-weight: 600;
    border-radius: 20px;
}

#accountName {
    color: #1A1A1A;
    font-size: 13px;
    font-weight: 600;
    background: transparent;
}

#accountPlan {
    color: #666666;
    font-size: 11px;
    font-weight: 500;
    background: transparent;
}

/* ==================== Search Page - Hero Section ==================== */
#heroHeading {
    font-size: 36px;
    font-weight: 700;
    color: #1A1A1A;
    background: transparent;
    letter-spacing: -0.5px;
    margin-bottom: 8px;
}

#heroSubtitle {
    font-size: 17px;
    color: #666666;
    background: transparent;
    margin-bottom: 16px;
}

/* Modern Search Bar */
#searchContainer {
    background-color: #FFFFFF;
    border-radius: 28px;
    border: 1px solid #E0E0E0;
}

#searchContainer:focus-within {
    border: 2px solid #7C4DFF;
}

#heroSearchInput {
    border: none;
    background: transparent;
    font-size: 16px;
    color: #1A1A1A;
    padding: 8px 0;
}

#heroSearchInput::placeholder {
    color: #A0A0A0;
}

/* Large Search Bar (Gemini-style) */
#searchContainerLarge {
    background-color: #FFFFFF;
    border-radius: 37px;
    border: 1px solid #E0E0E0;
}

#searchContainerLarge:focus-within {
    border: 2px solid #7C4DFF;
}

#heroSearchInputLarge {
    border: none;
    background: transparent;
    font-size: 18px;
    color: #1A1A1A;
    padding: 12px 0;
}

#heroSearchInputLarge::placeholder {
    color: #A0A0A0;
}

#aiIndicatorLarge {
    color: #7C4DFF;
    font-size: 14px;
    font-weight: 600;
    background: transparent;
    padding: 8px 12px;
}

#searchSubmitBtnLarge {
    background: #7C4DFF;
    border-radius: 25px;
    border: none;
    color: white;
    font-size: 22px;
    font-weight: bold;
}

#searchSubmitBtnLarge:hover {
    background: #9575FF;
}

#searchSubmitBtnLarge:pressed {
    background: #6A3DE8;
}

#aiIndicator {
    color: #7C4DFF;
    font-size: 12px;
    font-weight: 600;
    background: transparent;
    padding: 4px 8px;
}

#searchSubmitBtn {
    background: #7C4DFF;
    border-radius: 20px;
    border: none;
    color: white;
    font-size: 18px;
    font-weight: bold;
}

#searchSubmitBtn:hover {
    background: #9575FF;
}

#searchSubmitBtn:pressed {
    background: #6A3DE8;
}

/* Filter Chips */
#filterChip {
    background-color: #FFFFFF;
    border: 1px solid #E0E0E0;
    border-radius: 20px;
    padding: 8px 16px;
    color: #666666;
    font-size: 13px;
    font-weight: 500;
}

#filterChip:hover {
    border-color: #7C4DFF;
    color: #7C4DFF;
}

#filterChip:checked {
    background-color: rgba(124, 77, 255, 0.1);
    border-color: #7C4DFF;
    color: #7C4DFF;
}

/* ==================== Index Page ==================== */
#pageTitle {
    font-size: 24px;
    font-weight: 700;
    color: #1A1A1A;
    background: transparent;
}

#pageSubtitle {
    font-size: 14px;
    color: #666666;
    background: transparent;
}

/* Drop Zone */
#dropZone {
    border: 2px dashed rgba(124, 77, 255, 0.3);
    border-radius: 20px;
    background-color: #FFFFFF;
    padding: 30px;
}

#dropZone:hover {
    border-color: #7C4DFF;
    background-color: rgba(124, 77, 255, 0.05);
}

#dropIcon {
    background-color: rgba(124, 77, 255, 0.1);
    border-radius: 12px;
    font-size: 28px;
    color: #7C4DFF;
}

#dropTitle {
    font-size: 16px;
    font-weight: 600;
    color: #7C4DFF;
    background: transparent;
}

#dropSubtitle {
    font-size: 13px;
    color: #808080;
    background: transparent;
}

/* Large Drop Zone for simplified Index page */
#dropZoneLarge {
    border: 2px dashed rgba(124, 77, 255, 0.5);
    border-radius: 24px;
    background-color: rgba(124, 77, 255, 0.06);
    padding: 50px;
    min-height: 300px;
}

#dropZoneLarge:hover {
    border-color: #7C4DFF;
    border-width: 3px;
    background-color: rgba(124, 77, 255, 0.12);
}

#dropIconLarge {
    background: transparent;
}

#dropTitleLarge {
    font-size: 22px;
    font-weight: 600;
    color: #7C4DFF;
    background: transparent;
}

#dropSubtitleLarge {
    font-size: 15px;
    color: #808080;
    background: transparent;
}

/* View Indexed Files Button */
#viewFilesButton {
    background-color: #7C4DFF;
    color: white;
    border: none;
    border-radius: 26px;
    font-size: 16px;
    font-weight: 600;
    padding: 14px 32px;
}

#viewFilesButton:hover {
    background-color: #9575FF;
}

#viewFilesButton:pressed {
    background-color: #6A3DE8;
}

/* More Options Header */
#moreOptionsHeader {
    background-color: transparent;
    color: #888;
    border: none;
    font-size: 14px;
    font-weight: 500;
    padding: 8px 20px;
}

#moreOptionsHeader:hover {
    color: #7C4DFF;
}

#moreOptionsContent {
    padding: 8px 0;
}

/* Index PC Now Button */
#indexPcButton {
    background-color: transparent;
    color: #7C4DFF;
    border: 2px solid #7C4DFF;
    border-radius: 22px;
    font-size: 15px;
    font-weight: 600;
    padding: 10px 28px;
    min-width: 220px;
}

#indexPcButton:hover {
    background-color: rgba(124, 77, 255, 0.08);
}

#indexPcButton:pressed {
    background-color: rgba(124, 77, 255, 0.15);
}

/* Watch Header Button */
#watchHeaderButton {
    background-color: transparent;
    color: #7C4DFF;
    border: 2px solid #7C4DFF;
    border-radius: 22px;
    font-size: 15px;
    font-weight: 600;
    padding: 10px 28px;
    min-width: 260px;
}

#watchHeaderButton:hover {
    background-color: rgba(124, 77, 255, 0.08);
}

/* Watch Options Container */
#watchOptionsContainer {
    background-color: rgba(200, 200, 220, 0.3);
    border-radius: 12px;
    padding: 12px;
    margin: 8px 40px;
}

/* Watch Toggle Buttons */
#watchToggleBtn {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #cccccc;
    border-radius: 18px;
    font-size: 14px;
    font-weight: 500;
    padding: 8px 20px;
}

#watchToggleBtn:checked {
    background-color: #7C4DFF;
    color: white;
    border-color: #7C4DFF;
}

#watchToggleBtn:hover {
    background-color: #f0f0f0;
}

#watchToggleBtn:checked:hover {
    background-color: #9575FF;
}

/* Watch Description */
#watchDescription {
    color: #666;
    font-size: 12px;
    margin-left: 16px;
    margin-bottom: 8px;
}

/* Add Folder Button */
#addFolderBtn {
    background-color: transparent;
    color: #7C4DFF;
    border: 1px dashed #7C4DFF;
    border-radius: 14px;
    font-size: 13px;
    padding: 6px 16px;
}

#addFolderBtn:hover {
    background-color: rgba(124, 77, 255, 0.08);
}

/* Custom Folder Label */
#customFolderLabel {
    color: #333;
    font-size: 13px;
    padding: 4px 8px;
}

/* Remove Folder Button */
#removeFolderBtn {
    background-color: transparent;
    color: #888;
    border: none;
    font-size: 14px;
    font-weight: bold;
}

#removeFolderBtn:hover {
    color: #ff5555;
}

/* Watch Status Label */
#watchStatusLabel {
    font-size: 13px;
    padding: 8px;
}

/* Watch Popup Styles */
#watchPopupCloseBtn {
    background-color: transparent;
    color: #888;
    border: none;
    font-size: 18px;
    font-weight: bold;
}

#watchPopupCloseBtn:hover {
    color: #333;
}

#watchSectionFrame {
    background-color: rgba(240, 240, 250, 0.8);
    border: 1px solid rgba(124, 77, 255, 0.15);
    border-radius: 12px;
}

#watchSectionTitle {
    font-size: 15px;
    font-weight: 600;
    color: #333;
}

#watchSectionDesc {
    font-size: 12px;
    color: #666;
    padding-left: 4px;
}

#watchTogglePill {
    background-color: #ddd;
    color: #888;
    border: none;
    border-radius: 14px;
    font-size: 12px;
    font-weight: 600;
}

#watchTogglePill:checked {
    background-color: #4CAF50;
    color: white;
}

#watchAddFolderBtn {
    background-color: transparent;
    color: #7C4DFF;
    border: 1px solid #7C4DFF;
    border-radius: 14px;
    font-size: 13px;
    padding: 4px 14px;
}

#watchAddFolderBtn:hover {
    background-color: rgba(124, 77, 255, 0.08);
}

#watchEmptyLabel {
    color: #888;
    font-size: 12px;
    font-style: italic;
    padding: 8px 0;
}

#watchFolderItem {
    color: #333;
    font-size: 13px;
}

#watchRemoveFolderBtn {
    background-color: transparent;
    color: #888;
    border: none;
    font-size: 12px;
}

#watchRemoveFolderBtn:hover {
    color: #ff5555;
}

#watchPopupStatus {
    padding: 8px 0;
}

/* Styled Warning Dialog */
#warningDialogContainer {
    background-color: #ffffff;
    border: 2px solid #7C4DFF;
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
}

#warningDialogTitle {
    font-size: 22px;
    font-weight: 700;
    color: #1a1a2e;
    padding: 8px 0;
}

#warningDialogContent {
    font-size: 14px;
    color: #444444;
    line-height: 1.6;
    padding: 8px 0;
}

#warningDialogSubtitle {
    font-size: 14px;
    color: #666;
    padding-bottom: 12px;
}

#warningDialogSectionLabel {
    font-size: 13px;
    font-weight: 600;
    color: #7C4DFF;
    padding-top: 8px;
}

#warningDialogFolderList {
    font-size: 13px;
    color: #444;
    padding: 8px 12px;
    background-color: rgba(0, 0, 0, 0.03);
    border-radius: 8px;
    line-height: 1.8;
}

#warningDialogNote {
    font-size: 12px;
    color: #666;
    padding: 8px 0;
    font-style: italic;
}

#warningDialogCancelBtn {
    background-color: transparent;
    color: #666;
    border: 2px solid #cccccc;
    border-radius: 21px;
    font-size: 15px;
    font-weight: 600;
    padding: 10px 24px;
}

#warningDialogCancelBtn:hover {
    background-color: rgba(0, 0, 0, 0.03);
    border-color: #999;
    color: #444;
}

#warningDialogConfirmBtn {
    background-color: #7C4DFF;
    color: white;
    border: none;
    border-radius: 21px;
    font-size: 15px;
    font-weight: 600;
    padding: 10px 24px;
}

#warningDialogConfirmBtn:hover {
    background-color: #9575FF;
}

#warningDialogConfirmBtn:pressed {
    background-color: #6A3DE8;
}

/* Files Overlay Dialog */
QDialog#filesOverlay {
    background-color: #FFFFFF;
    border-radius: 16px;
}

/* Locations Card */
#locationsCard {
    background-color: #FFFFFF;
    border: 1px solid #E8E8E8;
    border-radius: 12px;
}

#cardTitle {
    font-size: 14px;
    font-weight: 600;
    color: #1A1A1A;
    background: transparent;
}

#activeIndicator {
    font-size: 12px;
    color: #4CAF50;
    background: transparent;
}

#indexedPathsList {
    background-color: transparent;
    border: none;
}

#indexedPathsList::item {
    padding: 10px 12px;
    border-radius: 8px;
    color: #4A4A4A;
}

#indexedPathsList::item:selected {
    background-color: rgba(124, 77, 255, 0.1);
    color: #7C4DFF;
}

#sectionSeparator {
    background-color: #E8E8E8;
    border: none;
}

/* ==================== Inputs (LineEdit, TextEdit) ==================== */
QLineEdit, QTextEdit {
    background-color: #FFFFFF;
    border: 1px solid #E0E0E0;
    border-radius: 8px;
    padding: 10px 12px;
    color: #1A1A1A;
    selection-background-color: #7C4DFF;
    selection-color: #FFFFFF;
}

QLineEdit:focus, QTextEdit:focus {
    border: 1px solid #7C4DFF;
}

/* ComboBox */
QComboBox {
    background-color: #FFFFFF;
    border: 1px solid #E0E0E0;
    border-radius: 8px;
    padding: 8px 12px;
    color: #1A1A1A;
    min-height: 20px;
}

QComboBox:hover {
    border-color: #7C4DFF;
}

QComboBox:focus {
    border-color: #7C4DFF;
}

QComboBox::drop-down {
    border: none;
    width: 24px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 6px solid #808080;
    margin-right: 8px;
}

QComboBox QAbstractItemView {
    background-color: #FFFFFF;
    border: 1px solid #E0E0E0;
    border-radius: 8px;
    selection-background-color: rgba(124, 77, 255, 0.1);
    selection-color: #7C4DFF;
    padding: 4px;
}

/* ==================== Buttons ==================== */
QPushButton {
    background-color: #FFFFFF;
    border: 1px solid #E0E0E0;
    border-radius: 8px;
    padding: 10px 20px;
    color: #1A1A1A;
    font-weight: 500;
}

QPushButton:hover {
    background-color: #7C4DFF;
    color: #FFFFFF;
    border: 1px solid #7C4DFF;
}

QPushButton:pressed {
    background-color: #6A3DE8;
    border: 1px solid #6A3DE8;
}

QPushButton:disabled {
    background-color: #F5F5F5;
    color: #AAAAAA;
    border: 1px solid #E0E0E0;
}

/* Checked/Toggle state for checkable buttons */
QPushButton:checked {
    background-color: rgba(124, 77, 255, 0.1);
    border: 1px solid #7C4DFF;
    color: #7C4DFF;
    font-weight: 600;
}

QPushButton:checked:hover {
    background-color: rgba(124, 77, 255, 0.15);
}

/* Settings toggle buttons */
#settingsToggle {
    min-width: 160px;
    padding: 8px 16px;
}

#settingsToggle:checked {
    background-color: rgba(124, 77, 255, 0.1);
    border: 1px solid #7C4DFF;
    color: #7C4DFF;
}

/* Primary Button */
QPushButton#primaryButton {
    background: qlineargradient(
        x1: 0, y1: 0, x2: 1, y2: 0,
        stop: 0 #7C4DFF,
        stop: 1 #9575FF
    );
    border: none;
    border-radius: 8px;
    color: #FFFFFF;
    font-weight: 600;
}

QPushButton#primaryButton:hover {
    background: qlineargradient(
        x1: 0, y1: 0, x2: 1, y2: 0,
        stop: 0 #9575FF,
        stop: 1 #B39DFF
    );
}

QPushButton#primaryButton:pressed {
    background: #6A3DE8;
}

QPushButton#primaryButton:disabled {
    background: #E8E8E8;
    color: #AAAAAA;
}

/* Secondary Button */
QPushButton#secondaryButton {
    background-color: transparent;
    border: 1px solid #E0E0E0;
    border-radius: 8px;
    color: #666666;
    font-weight: 500;
}

QPushButton#secondaryButton:hover {
    border-color: #7C4DFF;
    color: #7C4DFF;
    background-color: rgba(124, 77, 255, 0.05);
}

/* Link Button */
#linkButton {
    background: transparent;
    border: none;
    color: #7C4DFF;
    font-size: 13px;
    font-weight: 500;
    padding: 4px 8px;
}

#linkButton:hover {
    color: #9575FF;
}

/* ==================== Tables ==================== */
QTableWidget, #searchResultsTable, #filesTable {
    background-color: #FFFFFF;
    alternate-background-color: #FAFBFC;
    border: none;
    gridline-color: transparent;
    selection-background-color: #F5F5FF;
    selection-color: #1A1A1A;
    outline: none;
}

QTableWidget::item {
    padding: 12px 8px;
    border-bottom: 1px solid #F0F0F0;
}

QTableWidget::item:selected {
    background-color: rgba(124, 77, 255, 0.08);
    color: #1A1A1A;
    border: none;
}

QTableWidget::item:focus {
    background-color: rgba(124, 77, 255, 0.12);
    border: none;
    outline: none;
}

QTableWidget::item:hover {
    background-color: #F5F5FF;
}

/* Table Header */
QHeaderView::section {
    background-color: #FAFBFC;
    color: #808080;
    padding: 12px 8px;
    border: none;
    border-bottom: 1px solid #E8E8E8;
    font-weight: 600;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* ==================== Scrollbars ==================== */
QScrollBar:vertical {
    border: none;
    background: #FAFBFC;
    width: 8px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background: #D0D0D0;
    min-height: 20px;
    border-radius: 4px;
}

QScrollBar::handle:vertical:hover {
    background: #7C4DFF;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    border: none;
    background: #FAFBFC;
    height: 8px;
    margin: 0px;
}

QScrollBar::handle:horizontal {
    background: #D0D0D0;
    min-width: 20px;
    border-radius: 4px;
}

QScrollBar::handle:horizontal:hover {
    background: #7C4DFF;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* ==================== GroupBox ==================== */
QGroupBox {
    border: 1px solid #E8E8E8;
    border-radius: 8px;
    margin-top: 1.5em;
    padding-top: 10px;
    background-color: #FFFFFF;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    color: #7C4DFF;
    font-weight: 600;
}

/* ==================== Labels ==================== */
QLabel {
    color: #1A1A1A;
    background: transparent;
}

QLabel#secondaryLabel, #infoLabel {
    color: #808080;
    font-size: 12px;
}

#searchStatsLabel {
    color: #808080;
    font-size: 13px;
    background: transparent;
}

/* ==================== Progress Bar ==================== */
QProgressBar, #indexProgressBar {
    border: none;
    background-color: #E8E8E8;
    border-radius: 10px;
    min-height: 20px;
    max-height: 24px;
    text-align: center;
    font-weight: 600;
    font-size: 11px;
    color: #1A1A1A;
}

QProgressBar::chunk {
    background: qlineargradient(
        x1: 0, y1: 0, x2: 1, y2: 0,
        stop: 0 #7C4DFF,
        stop: 1 #9575FF
    );
    border-radius: 10px;
}

#percentLabel {
    font-size: 18px;
    font-weight: 700;
    color: #7C4DFF;
    background: transparent;
}

#progressLabel {
    font-size: 12px;
    color: #808080;
    background: transparent;
}

/* Paused Progress Bar */
QProgressBar[paused="true"] {
    border: 1px solid #FFA500;
}

QProgressBar[paused="true"]::chunk {
    background: qlineargradient(
        x1: 0, y1: 0, x2: 1, y2: 0,
        stop: 0 #FF8C00,
        stop: 1 #FFA500
    );
}

/* ==================== Tooltips ==================== */
QToolTip {
    background-color: #FFFFFF;
    color: #1A1A1A;
    border: 1px solid #E0E0E0;
    border-radius: 4px;
    padding: 6px 10px;
}

/* ==================== Status Bar ==================== */
#statusBar {
    background-color: #FAFBFC;
    border-top: 1px solid #E8E8E8;
    color: #808080;
}

/* ==================== Quick Actions Bar ==================== */
#quickActionsBar {
    background-color: #FFFFFF;
    border: 1px solid #E8E8E8;
    border-radius: 8px;
    margin: 4px 0;
}

#selectionLabel {
    color: #7C4DFF;
    font-size: 13px;
    font-weight: 600;
    background: transparent;
    padding: 4px 8px;
}

#quickActionBtn {
    background-color: #FAFBFC;
    border: 1px solid #E0E0E0;
    border-radius: 6px;
    padding: 6px 12px;
    color: #4A4A4A;
    font-size: 12px;
    font-weight: 500;
}

#quickActionBtn:hover {
    background-color: #7C4DFF;
    color: #FFFFFF;
    border-color: #7C4DFF;
}

#quickActionBtn:pressed {
    background-color: #6A3DE8;
}

#quickActionBtnSecondary {
    background-color: transparent;
    border: 1px solid #E0E0E0;
    border-radius: 6px;
    padding: 6px 12px;
    color: #808080;
    font-size: 12px;
    font-weight: 500;
}

#quickActionBtnSecondary:hover {
    border-color: #7C4DFF;
    color: #7C4DFF;
    background-color: rgba(124, 77, 255, 0.05);
}

/* ==================== Quick Search Overlay ==================== */
#overlayFrame {
    background-color: #FFFFFF;
    border: 1px solid #E8E8E8;
    border-radius: 16px;
}

#overlayInput {
    font-size: 20px;
    padding: 12px;
    background-color: transparent;
    border: none;
    border-bottom: 1px solid #E8E8E8;
    color: #1A1A1A;
}

#overlayInput:focus {
    border-bottom: 1px solid #7C4DFF;
}

#overlayResults {
    background-color: transparent;
    border: none;
}

#overlayResults::item {
    padding: 0px;
    border-radius: 0px;
    color: #666666;
}

#overlayResults::item:selected {
    background-color: #F5F5FF;
    color: #1A1A1A;
    border: 1px solid #7C4DFF;
}

/* Overlay Close Button (X) */
#overlayCloseBtn {
    background-color: #7C4DFF;
    border: none;
    border-radius: 14px;
    color: white;
    font-size: 12px;
    font-weight: bold;
    padding: 0px;
}

#overlayCloseBtn:hover {
    background-color: #9B6FFF;
    color: white;
}

#overlayCloseBtn:pressed {
    background-color: #6A3DDD;
    color: white;
}

/* Overlay Open Button (per row) */
#overlayOpenBtn {
    background-color: #7C4DFF;
    border: none;
    border-radius: 0px;
    color: white;
    font-size: 12px;
    font-weight: bold;
    padding: 0px;
    margin: -10px -12px;
}

#overlayOpenBtn:hover {
    background-color: #9B6FFF;
    color: white;
}

#overlayOpenBtn:pressed {
    background-color: #6A3DDD;
    color: white;
}

/* Overlay Fill Button (main action) */
#overlayFillBtn {
    background-color: #7C4DFF;
    border: none;
    border-radius: 8px;
    color: #FFFFFF;
    font-size: 14px;
    font-weight: 600;
    padding: 10px 24px;
}

#overlayFillBtn:hover {
    background-color: #9B6FFF;
}

#overlayFillBtn:pressed {
    background-color: #6A3DDD;
}

#overlayFillBtn:disabled {
    background-color: #E8E8E8;
    color: #AAAAAA;
}

/* Overlay Copy Path Button */
#overlayCopyBtn {
    background-color: transparent;
    border: 1px solid #7C4DFF;
    border-radius: 8px;
    color: #7C4DFF;
    font-size: 13px;
    font-weight: 600;
    padding: 8px 16px;
}

#overlayCopyBtn:hover {
    background-color: #F5F5FF;
}

#overlayCopyBtn:pressed {
    background-color: #E8E0FF;
}

#overlayCopyBtn:disabled {
    border-color: #E0E0E0;
    color: #AAAAAA;
}

/* ==================== Auth Dialog ==================== */
#authDialog {
    background-color: #FAFBFC;
}

#authContainer, #authPage, #authStack {
    background-color: transparent;
}

#authLogo {
    font-size: 48px;
    background: transparent;
}

#authTitle {
    color: #1A1A1A;
    font-size: 24px;
    font-weight: 700;
    background: transparent;
}

#authSubtitle {
    color: #808080;
    font-size: 14px;
    background: transparent;
}

#authLabel {
    color: #666666;
    font-size: 13px;
    font-weight: 500;
    background: transparent;
}

#authInput {
    background-color: #FFFFFF;
    border: 2px solid #E8E8E8;
    border-radius: 10px;
    padding: 12px 16px;
    color: #1A1A1A;
    font-size: 14px;
}

#authInput:hover {
    border-color: #D0D0D0;
}

#authInput:focus {
    border-color: #7C4DFF;
}

#subscriptionCard {
    background: qlineargradient(
        x1: 0, y1: 0, x2: 1, y2: 1,
        stop: 0 #F5F5FF,
        stop: 1 #FFFFFF
    );
    border: 1px solid #E8E8E8;
    border-radius: 16px;
}

#planBadge {
    color: #7C4DFF;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 2px;
    background: rgba(124, 77, 255, 0.1);
    border-radius: 20px;
    padding: 6px 16px;
}

#priceAmount {
    color: #1A1A1A;
    font-size: 42px;
    font-weight: 700;
    background: transparent;
}

#pricePeriod {
    color: #808080;
    font-size: 16px;
    background: transparent;
}

#featureLabel {
    color: #333333;
    font-size: 15px;
    font-weight: 600;
    background: transparent;
    padding: 4px 0;
    min-height: 20px;
}

#errorLabel {
    color: #E53935;
    font-size: 13px;
    background: transparent;
}

#statusLabel {
    color: #808080;
    font-size: 13px;
    background: transparent;
}
